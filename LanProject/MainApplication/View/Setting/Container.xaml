<UserControl x:Class="LanProject.MainApplication.View.Setting.Container"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanProject.MainApplication.View.Setting"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20" x:Name="grid">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" Padding="0 20" VerticalAlignment="Center" Width="{Binding ElementName=grid,Path=ActualWidth}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <local:Template Title="備註設定" x:Name="Note" Icon="StickyNote" ElementClick="Note_ElementClick"/>
                <!--<local:Template Title="個人設定" x:Name="Personal" Icon="Gear" ElementClick="Personal_ElementClick"/>-->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
